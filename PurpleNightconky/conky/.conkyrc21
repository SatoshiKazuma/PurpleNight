#Enjoy, the spaces were left on purpose.
#This conky covers the whole screen(set up accordingly) 
background yes
update_interval 0.3

cpu_avg_samples 2
net_avg_samples 2
temperature_unit celsius

double_buffer yes
no_buffers yes
text_buffer_size 2048
alignment middle_left
gap_x 1
gap_y 70
minimum_size 200 50
maximum_width 300
own_window yes
own_window_type desktop
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 0

border_inner_margin 1
border_outer_margin 1


draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
default_shade_color 112422

#override_utf8_locale yes
use_xft yes
xftfont UnitedKingdom:size=2
xftalpha 0
uppercase yes

default_color 001FFF
#E87E3C
own_window_colour 000000
TEXT
${font LIBRARY3AM:bold}${color af2170} ${totaldown <network_name>} | ${totalup <network_name>}
 ${downspeedgraph <network_name> 15,192 }
 ${upspeedgraph <network_name> 15,192 }
 ${diskiograph_read 15,192}  
 ${diskiograph_write 15,192}  
 ${membar 1,40}
